@using HRM.Web.ViewModels
@model List<EmployeeViewModel>

@{
    ViewData["Title"] = "Employee List";
}

<div>
    <a asp-controller="Employee" asp-action="Add" class="btn btn-success mt-2">
        <i class="bi bi-plus"></i>Add Employee
    </a>
    <form class="float-end d-flex mt-2">
        <input class="form-control me-2" name="searchText" type="search" placeholder="Type employee name">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>

<table class="table">
    <tr>
        <th></th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Designation</th>
        <th>Level</th>
        <th>Department</th>
        <th>Join Date</th>
        <th></th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td><img height="30" class="rounded-circle" src="/profile-images/@employee.ProfileImage" /></td>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.DesignationName</td>
            <td>@employee.Level</td>
            <td>@employee.DepartmentName</td>
            <td>@employee.JoinDate</td>
            <td>
                <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
            </td>
        </tr>
    }
</table>