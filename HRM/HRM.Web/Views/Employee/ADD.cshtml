@model EmployeeViewModel

@{
    ViewData["Title"] = "Add Employee";
}

<h2>Add Employee</h2>

<div class="card mt-2 p-2">
    <form method="post" enctype="multipart/form-data">
        <!--enctype="multipart/form-data for file uplaod-->
    <div class="nb-2">
    <label asp-for="FirstName" class="form-label"></label>
    <span asp-validation-for="FirstName" class="text-danger"></span>
    <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="nb-2">
    <label asp-for="LastName" class="form-label"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
    <input asp-for="LastName" class="form-control" />
    </div>
    <div class="nb-2">
    <label asp-for="Designation" class="form-label"></label>
            <!--<input asp-for="Designation" class="form-control" />-->
            <!-- Dropdown List for field selection on form-->
            <span asp-validation-for="DesignationId" class="text-danger"></span>
            <select asp-for="DesignationId" asp-items="@ViewData["Designation"] as IEnumerable<SelectListItem>" class="form-select">
            </select>
    </div>
    <div class="nb-2">
    <label asp-for="level" class="form-label"></label>
            <span asp-validation-for="level" class="text-danger"></span>
    <input asp-for="level" class="form-control" />
    </div>
        <div class="nb-2">
            <label asp-for="Department" class="form-label"></label>
            <!--<input asp-for="Department" class="form-control" />-->
            <!-- Dropdown List for field selection on form-->
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
            <select asp-for="DepartmentId" asp-items="@ViewData["Department"] as IEnumerable<SelectListItem>" class="form-select">
            </select>
            </div>
    <div class="nb-2">
    <label asp-for="JoinDate" class="form-label"></label>
            <span asp-validation-for="JoinDate" class="text-danger"></span>
    <input asp-for="JoinDate" class="form-control" />
    </div>
    <!-- Image Upload -->
    <div class="mv-3">
            <label asp-for="Avatar" class="form-label">Profile Image</label>
            <input asp-for="Avatar" class="form-control" />
    </div>

        <!--<a class="btn btn-success" asp-controller="Employee" asp-action="List">Cancel</a>-->
        <button type="submit" class="btn btn-success"><i class="bi bi-save-fill"></i>Save Eployee</button>
        <a asp-action="List">Back to List</a>
</form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }